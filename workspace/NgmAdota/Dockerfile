FROM ubuntu:latest AS build

RUN apt-get update
RUN apt-get install openjdk-17-jdk -y

# Definir o diret칩rio de trabalho para o diret칩rio do backend
WORKDIR /workspace/NgmAdota

COPY . .

# Instalar Maven
RUN apt-get install maven -y

# Executar o Maven dentro do diret칩rio correto onde o pom.xml est치 localizado
RUN mvn clean install

FROM openjdk:17-jdk-slim
EXPOSE 8080

# Copiar o arquivo .jar gerado para o novo container
COPY --from=build /workspace/NgmAdota/target/NgmAdota-1.0.0.jar app.jar

ENTRYPOINT ["java", "-jar", "app.jar"]
